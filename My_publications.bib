journal = {Regional Environmental Change},
keywords = {Biological invasions,Cape Floristic Region,Fynbos,Invasive alien plant species,Management strategies,Scenario planning},
number = {2},
pages = {311--320},
title = {{Managing biological invasions: charting courses to desirable futures in the Cape Floristic Region}},
