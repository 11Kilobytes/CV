keywords = {23 february 2009,biological invasion,ecological niche models,february 2009 and accepted,geographic distribution,linepithema humile,ne iberian peninsula,pathways of introduction,received 17 september 2008,revised version received 19,spatial scales,spread models},
number = {9},
pages = {2101--2115},
